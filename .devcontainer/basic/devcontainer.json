// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-outside-of-docker
{
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:bookworm",
	"name": "Template repository",
    "customizations": {
        "vscode": {
            "extensions": [
                // Standardize editor configuration
                "EditorConfig.EditorConfig",
                // Markdown linting support
                "davidanson.vscode-markdownlint",
				// Support general GitHub features
				"github.remotehub",
				"github.vscode-github-actions",
				"github.vscode-pull-request-github",
                // Support golang text/templating for language editors that use it
                "jinliming2.vscode-go-template",
                // Support interacting with running devcontainers
                "ms-azuretools.vscode-docker",
                "ms-vscode-remote.remote-containers",
                // Support YAML editing
                "redhat.vscode-yaml"
            ]
        }
    },
	"features": {
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
			"version": "latest",
			"enableNonRootDocker": "true",
			"moby": "true"
		}
	},

	"mounts": [
        // Support user 1password sessions
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.1password,target=/home/vscode/.1password,type=bind,consistency=cached",
		// Support user SSH configuration
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached"
	],

	// Use this environment variable if you need to bind mount your local source code into a new container.
	"remoteEnv": {
		"LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
	}

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "docker --version",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
